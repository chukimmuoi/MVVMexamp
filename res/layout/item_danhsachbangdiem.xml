<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://robobinding.org/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:ignore="MissingPrefix" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="2dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/item_danhsachbangdiem_img_anh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/check"
                    bind:src="{image}" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_danhsachbangdiem_tv_monhoc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:gravity="center_vertical"
                android:textColor="#FFCC00"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                bind:text="{monHoc}" />

            <TextView
                android:id="@+id/item_danhsachbangdiem_tv_diemtongket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#003399"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                bind:text="{diemTongKet}" />

            <TextView
                android:id="@+id/item_danhsachbangdiem_tv_diemchu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#00EE00"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                bind:text="{diemChu}" />

            <TextView
                android:id="@+id/item_danhsachbangdiem_tv_diemtichluy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#990000"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                bind:text="{diemTichLuy}" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>